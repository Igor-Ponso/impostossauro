.text-l
  font-size: 1rem
  font-weight: 500

  &[small]
    font-size: 0.75rem
  
  &[mid]
    font-size: 0.875rem

  &[big]
    font-size: 1.25rem
    
  &[bigger]
    font-size: 1.5rem

  &[thin]
    font-weight: 400

  &[bold]
    font-weight: 700

  &[capitalize]
    text-transform: capitalize;

  &[uppercase]
    text-transform: uppercase;
  
  &[justify]
    text-align: justify

  &[center]
    text-align: center
    
  &[hover]
    :hover
      cursor: pointer

  &[ellipsis]
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;

