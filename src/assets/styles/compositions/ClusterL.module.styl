.cluster-l
  display: flex
  flex-wrap: wrap
  gap: var(--gap, 1.5rem)
  justify-content: flex-start
  align-items: center

  &[center]
    justify-content: center
  
  &[start]
    justify-content: flex-start

  &[end]
    justify-content: flex-end

  &[between]
    justify-content: space-between

  &[around]
    justify-content: space-around

  &[bigger]
    gap: var(--gap, 3rem)

  &[big]
    gap: var(--gap, 2rem)

  &[narrow]
    gap: var(--s0, 1rem)
    
  &[squeezed]
    gap: var(--gap, 0.75rem)

  &[small]
    gap: .5rem

  &[no-gap]
    gap: unset

  &[align-start]
    align-items: flex-start

  &[no-wrap]
    flex-wrap: nowrap

  &[row-reverse]
    flex-flow: row-reverse
  
  &[full-width]
    width: 100%
    
